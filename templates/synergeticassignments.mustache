<table class="table table-bordered table-responsive syn-assign">
    <thead>
    <tr class="attheader table-active">
        <th>{{#str}} term, block_assignmentsquizzes_report {{/str}}</th>
        <th>{{#str}} week, block_assignmentsquizzes_report {{/str}}</th>
        <th>{{#str}} testdate, block_assignmentsquizzes_report {{/str}}</th>
        <th>{{#str}} subject, block_assignmentsquizzes_report {{/str}}</th>
        <th>{{#str}} assessmentdescription, block_assignmentsquizzes_report {{/str}}</th>
        <th>{{#str}} result, block_assignmentsquizzes_report {{/str}}</th>
        <th>{{#str}} markoutof, block_assignmentsquizzes_report {{/str}}</th>
        <th>{{#str}} weighting, block_assignmentsquizzes_report {{/str}}</th>
    
    </tr>
    </thead>
    <tbody>
        {{#assessments}}
             {{#details}}
                <tr class="table-primary">
                    <td class= "text-center">
                        <b>{{term}}</b>
                    </td>
                    <td colspan= "6">{{dummycell}}</td>
                    
                </tr>
                   {{#results}}
                        <tr class= "text-center">
                            <td></td>
                            <td>{{week}}</td>
                            <td>{{testdate}}</td>
                            <td>{{classdescription}}</td>
                            <td>{{heading}}</td>    
                            <td>{{result}}</td>  
                            <th class="out-of-col">{{outof}}</th>
                            <td>{{weighting}}</td>
                        </tr>
                        {{/results}}
                {{/details}}
        {{/assessments}}
    </tbody>
 </table>